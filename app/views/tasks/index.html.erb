<h1>タスク一覧</h1>
<%= notice %>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <th><%= task.name %></th>
    <th><%= task.detail %></th>

    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to 'タスクを編集する', edit_task_path(task.id) %></td>
  </tr>
<% end %> 
</table>>

<%= link_to '新しいタスクを追加する', new_task_path %>