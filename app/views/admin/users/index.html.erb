<h1>管理者画面のユーザー一覧</h1>
<h5><%= link_to 'ユーザーを新規登録する', new_admin_user_path %></h5>

  <% @users.each do |user| %>
  <div class="admin_table">
      <h5>ユーザーID: <%= user.id %></h5>
      <h5>ユーザー名: <%= user.name %></h5>
      <h5>タスク数: <%= user.tasks.count %></h5>
      <% if current_user.admin? %>
      <h5 class="user_detail"><%= button_to '詳細を確認する', admin_user_path(user.id), method: :get %></h5>
      <h5 class="edit_user"><%= button_to 'ユーザーを編集する', edit_admin_user_path(user.id), method: :get %></h5>
      <h5 class="delete_user"><%= button_to 'ユーザーを削除する', admin_user_path(user.id), method: :delete %></h5>
      <% end %>
  </div>
  <% end %>
  <h5 class="pagenate"><%= paginate @users %></h5>