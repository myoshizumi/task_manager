<h1>管理者画面のユーザー一覧</h1>

<table>
  <tr>
    <h5>ユーザーID</h5><h5>ユーザー名</h5>
    
  </tr>  
</table>

<% @users.each do |user| %>
  <tr>
    <h5><%= user.id %></h5>
    <h5><%= user.name %></h5>
    <% if current_user.admin? %>
    <h5><%= link_to '詳細を確認する', admin_user_path(user.id) %></h5>
    <h5><%= link_to 'ユーザーを編集する', edit_admin_user_path(user.id) %></h5>
    <h5><%= link_to 'ユーザーを削除する', admin_user_path(user.id), method: :delete %></h5>
    <% end %>
  </tr>
<% end %>
  <h5 class="pagenate"><%= paginate @users %></h5>